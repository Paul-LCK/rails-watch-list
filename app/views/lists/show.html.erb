<div class="container">
  <div class="row">
    <div class="col">
      <%= link_to 'My lists', lists_path, class: "btn btn-danger" %>

        <h1><%= @list.name %></h1>
        <p><%= link_to '+ Add a new movie in the list', new_list_bookmark_path(@list), class: "btn btn-successs" %></p>

          <h2>Reviews</h2>
            <div class="cards">
              <% @list.bookmarks.each do |bookmark| %>
                <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
                  <%= bookmark.movie.title %>
                  <%= bookmark.comment %>
                  <%= link_to "",
                        bookmark_path(bookmark),
                        method: :delete,
                        data: { confirm: "Are you sure?" }, class: "far fa-trash-alt"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
